<style media="screen">
.container {
  width: 50%;
  float: left;
  margin-left: 5%;
  margin-right: 5%;
  background-color: ghostWhite;
  padding: 0 2% 2% 2%;
}
button {
  border: none;
  background-color: inherit;
  font-size: inherit;
  background-color: #48cfad;
  color: white;
  padding: 0.75em;
}

.divvy {
  float: left;
  margin-top: 1.5%;
}

.subjecty {
  color: #656d78;
  margin-bottom: 2%;
}

.messagey {
  color: #656d78;
}
</style>

<div class="container">
  <form onsubmit={{action "composeEmail"}} data-test="create-email">
    <h3>New Message</h3>
    <div class="subjecty">
      <p id="to">To: {{input type="text" id="to" value=to}}</p>
    </div>
    <div class="subjecty">
      <p id="from">From: {{input type="text" id="from" value=from}}</p>
    </div>
    <div class="subjecty">
      <p id="subject">Subject: {{input type="text" id="subject" value=subject}}</p>
    </div>

    <div>
      <div class="messagey">
        <p id="message">Message: {{textarea rows="12" cols="100" value=message}}</p>
      </div>
    </div>

    <div class="divvy">
      <button type="submit" data-test="publish-email"><h5 style="margin: 0;">Publish</h5></button>
    </div>
  </form>
</div>

  #elements {
    padding: 2%;
    padding-bottom: 3%;
    border-bottom: 2px solid #e6e9ed;
    background-color: ghostWhite;
    color: black;
  }

  .starredEmails {
    list-style-type: none;

  }

  .unstarredEmails {
  }

  ul {
    list-style: none;
    float: right;
    background-color: ghostWhite;
    width: 85%;
    z-index: 0;
  }

  li {
  }
</style>

<div class="container">

  <div class="content">
    <div class="starredEmails">
      <ul>
        <h3>Starred</h3>
          {{#each model as |email|}}
            {{#if email.starred}}
              <SingleEmail @email={{email}} @star={{action "star" email}} />
            {{/if}}
          {{/each}}
      </ul>
    </div>

    <div class="unstarredEmails">
      <ul>
          {{#each model as |email|}}
            {{#unless email.starred}}
              <SingleEmail @email={{email}} @star={{action "star" email}} />
            {{/unless}}
          {{/each}}
      </ul>
    </div>
  </div>



</div>



{{outlet}}
